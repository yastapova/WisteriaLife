<% include partials/header %>
<!-- Page Content goes here -->
<div id="gameplay-screen" class="container-inner" align="center">
    <div class="toolbar top">
        <div class="toolbar-content">
            <div class="padder2">
                <form action="#">
                    <span class="range-field" id="timeline">
                        <input type="range" id="test5" min="0" max="100" />
                    </span>
                </form>
            </div>
            <span class="toolbar-text">0:30</span>
        </div>
    </div>
    <div class="canvas" id="editor-canvas">
    </div>
    <div class="toolbar bottom">
        <span class="toolbar-content">
            <div class="bottom align">
                <i class="material-icons clear-cell">backspace</i>
            </div>
            <!-- Dropdown Trigger -->
            <div class="bottom align">
                <a class='dropdown-button btn small' href='#!' data-activates='units'>Units</a>
            </div>

            <!-- Dropdown Structure -->
            <ul id='units' class='dropdown-content'>
                <li><a href="#!">Archer &nwarr;</a></li>
                <li><a href="#!">Archer &nearr;</a></li>
                <li><a href="#!">Archer &swarr;</a></li>
                <li><a href="#!">Archer &searr;</a></li>
                <li><a href="#!">Infantry &uarr;</a></li>
                <li><a href="#!">Infantry &darr;</a></li>
                <li><a href="#!">Infantry &rarr;</a></li>
                <li><a href="#!">Infantry &larr;</a></li>
                <li><a href="#!">Tower</a></li>
                <li><a href="#!">Blockade</a></li>
                <li><a href="#!">Shield</a></li>
                <li><a href="#!">Caltrops</a></li>
                <li><a href="#!">Wall &nwarr;</a></li>
                <li><a href="#!">Wall &nearr;</a></li>
            </ul>

            <!-- Switch -->
            <div class="bottom align">
                <div class="switch">
                    <label>
                        <span class="enemy-swatch"><i class="material-icons">stop</i></span>
                    <input type="checkbox">
                    <span class="lever"></span>
                        <span class="friendly-swatch"><i class="material-icons">stop</i></span>
                    </label>
                </div>
            </div>

            <!-- Dropdown Trigger -->
            <div class="bottom align">
                <a class='dropdown-button btn small' href='#!' data-activates='zoom'>Zoom</a>
            </div>

            <!-- Dropdown Structure -->
            <ul id='zoom' class='dropdown-content'>
                <li><a href="#!">Small</a></li>
                <li><a href="#!">Medium</a></li>
                <li><a href="#!">Large</a></li>
            </ul>

            <div class="bottom align">
                <i class="material-icons clear-cell">message</i>
            </div>

            <div class="bottom align">
                <a href="save-level"><i class="material-icons clear-cell">save</i></a>
            </div>

            <div class="bottom align">
                <a href="private-custom-levels"><i class="material-icons clear-cell">delete_forever</i></a>
            </div>
        </span>
    </div>
</div>

<% include partials/footer %>
